<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.dao.UserDao">
    <select id="getLists" resultType="User">
        select * from user
    </select>
    <select id="getOne" resultType="User">
      select * from user where id=#{id}
    </select>
    <select id="insert" parameterType="User">
        insert into user(username,password,tele) values(#{username},#{password},#{tele})
    </select>
    <select id="amend">
        update user set id=#{id},username=#{username},password=#{password},tele=#{tele},grade_id=#{grade_id} where id=#{id}
    </select>
    <select id="deleUser">
        delete from user where id=#{id}
    </select>
</mapper>